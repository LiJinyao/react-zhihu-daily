.header
  position: relative;
  width: 100%;
  min-width: 736px;
  height: 64px;
  margin-bottom: 45px;
  background-color: #FFF;
  box-shadow: 0 0 3px rgba(0, 0, 0, 0.4);
  @media screen and (max-width: 700px)
    min-width: 0;
    height: 56px;
    margin-bottom: 15px;
.logo
  position: absolute;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 45px;
  width: 180px;
  background-image: url(./headerLogo.svg);
  @media screen and (max-width: 700px)
    height: 35px;
    width: 140px;
