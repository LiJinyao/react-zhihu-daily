.storyItem
  width: 150px;
  height: 210px;
  display: inline-block;
  margin: 20px 15px;
  text-decoration: none;
  box-shadow: 0 2px 11px 0 rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease-in-out;
  @media screen and (max-width: 700px)
    width: 100%;
    height: 80px;
    margin: 5px 0;
    box-sizing: border-box;
    box-shadow: 0 0px 1px rgba(0, 0, 0, 0.3);
  &:hover
    box-shadow: 0 2px 21px 0 rgba(0, 0, 0, 0.4);
.img
  float: left;
  height: 150px;
  width: 150px;
  @media screen and (max-width: 700px)
    vertical-align: baseline;
    float: none;
    height: 70px;
    width: 70px;
    padding: 5px;
.titleBox
  float: left;
  height: 40px;
  padding: 10px;
  @media screen and (max-width: 700px)
    position: absolute;
    float: none;
    display: inline-block;
.title
  height: 40px;
  line-height: 20px;
  font-size: 14px;
  color: #000000;
  overflow: hidden;
  margin: 0;
  @media screen and (max-width: 700px)
    font-size: 1rem;
