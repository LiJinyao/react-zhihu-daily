.storyItem
  width: 150px;
  height: 210px;
  display: inline-block;
  margin-left: 17px;
  margin-right: 17px;
  margin-bottom: 30px;
  text-decoration: none;
  box-shadow: 0 2px 11px 0 rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease-in-out;
  &:hover
    box-shadow: 0 2px 21px 0 rgba(0, 0, 0, 0.4);
.img
  float: left;
  height: 150px;
  width: 150px;
.titleBox
  float: left;
  height: 40px;
  padding: 10px;
.title
  height: 40px;
  line-height: 20px;
  font-size: 14px;
  color: #000000;
  overflow: hidden;
  margin: 0;
