.storyBody
  width: 640px;
  margin: 0 auto;
  @media screen and (max-width: 700px)
    width: 100%;
    box-sizing: border-box;
    margin-top: -15px;

/*
story style
 */
:global
  .img-place-holder
    position: relative;
    height: 500px !important;
    overflow: hidden;
    @media screen and (max-width: 700px)
      height: 300px !important;
  .img-banner-background
    position: absolute;
    top: 0;
    width: 100%;
    height: inherit;
    box-shadow: inset 0 -500px 500px -500px #000;
  .story-title
    position: absolute;
    bottom: 30px;
    left: 20px;
    right: 20px;
    font-size: 2rem;
    font-weight: bold;
    color: #FFF;
    text-shadow: 0 2px 10px #000;
    @media screen and (max-width: 700px)
      font-size: 1.5rem;
  .image-copyright
    position: absolute;
    bottom: 10px;
    right: 10px;
    color: #CDCDCD;
    font-size: 0.7rem;
