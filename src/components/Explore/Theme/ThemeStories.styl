.imgPlaceHolder
  position: relative;
  height: 400px;
  overflow: hidden;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  @media screen and (max-width: 700px)
    height: 300px;
.imgBannerBackground
  position: absolute;
  top: 0;
  width: 100%;
  height: inherit;
  box-shadow: inset 0 -500px 500px -500px #000;
.storyListitle
  position: absolute;
  bottom: 30px;
  left: 20px;
  right: 20px;
  font-size: 2rem;
  font-weight: bold;
  color: #FFF;
  text-shadow: 0 2px 10px #000;
  @media screen and (max-width: 700px)
    font-size: 1.5rem;
.imageCopyright
  position: absolute;
  bottom: 10px;
  right: 10px;
  color: #CDCDCD;
  font-size: 0.7rem;
