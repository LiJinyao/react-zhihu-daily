@import "../../statics/consts"
.item
  position relative
  display block
  width 640px
  height 224px
  margin 64px auto 0 auto
  text-decoration none
  color #000
  overflow hidden
  background-repeat no-repeat
  background-size cover
  background-position center
  @media screen and (max-width: 700px)
    width 100%
    box-sizing border-box
    border-left none
    padding-left 0
    margin 0 0 10px 0
