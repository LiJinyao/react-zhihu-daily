@import "../../statics/consts"
.item
  position relative
  display block
  width 640px
  height 224px
  margin 64px auto 0 auto
  text-decoration none
  color #000
  overflow hidden
  background-repeat no-repeat
  background-size cover
  background-position center
  border-left 8px solid #000
  padding-left 8px
  transition border .1s ease-in-out
  &:hover
    border-left 8px solid zhihuBlue
.coverPlaceholder
  height 224px
.cover
  height 224px
.introHolder
  position absolute
  top 0
  height 100%
  width 100%
.introHolder
  box-shadow inset 1300px 0 300px -1300px rgba(0, 0, 0, 0.7)
  background-color rgba(0, 0, 0, 0.6)
  transition .2s background-color
  &:hover
    background-color transparent
.introHolder > span
  color #FFF
  display block
  margin-left 30px
  text-shadow 0 0 10px #000
.name
  margin-top 140px
  font-size 2rem
.desc
  margin-top 10px
  font-size 1rem
