// 640px
.sliderWarp
  width: 100%;
  height: 300px;
  position: relative;
  margin-bottom: 40px;
  @media screen and (max-width: 700px)
    margin-bottom: 20px;
    height: 200px;
.sliderBody
  height: inherit;
  width: 640px;
  margin: 0 auto;
  padding: 0;
  list-style: none;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  @media screen and (max-width: 700px)
    width: 100%;
.slideEnter
  opacity: 0.01;
.slideEnterActive
  opacity: 1;
  transition: opacity .5s ease-in;
