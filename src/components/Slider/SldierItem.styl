.itemwarp
  height: inherit;
  width: 100%;
  display: none;
  position: relative;
  box-sizing: border-box;
.active
  display: block;
  transform: translateX(0);
.right
.next
  display: block;
  position: absolute;
  top: 0;
  transform: translateX(100%);
.left
.prev
  display: block;
  position: absolute;
  top: 0;
  transform: translateX(-100%);
.linkwarp
  position: absolute;
  top: 0;
  display: block;
  height: 100%;
  width: 100%;
.header
  display: table;
  position: absolute;
  bottom: 0;
  height: 80px;
  width: 100%;
  background-color: rgba(50,128,237,0.8);
  @media screen and (max-width: 700px)
    height: 40px;
.headerTitle
  display: table-cell;
  vertical-align: middle;
  padding: 10px;
  color: #FFF;
  font-size: 1.5rem;
  @media screen and (max-width: 700px)
    font-size: 1rem;
.contentImg
  display: block;
  width: 100%;
  position: relative;
